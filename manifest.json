{
  "manifest_version": 2,
  "name": "1-Click Link Copy as Markdown",
  "version": "1.0.0.0",
  "description": "Copy link as markdown-format on the current page by 1-Click",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_title": "1-Click Link Copy as Markdown"
  }
}
